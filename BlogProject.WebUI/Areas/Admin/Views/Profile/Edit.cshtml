@model AppUserEditDto


<form class="shadow mx-auto w-50 p-3" method="post" enctype="multipart/form-data">
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    <input type="hidden" asp-for="Id" />
    <div class="form-group row">
        <label class="col-form-label col-sm-4">Profil Picture</label>
        <div class="col-sm-8">
            <img src="~/img/profile-picture/@Model.ProfilPicture" style="width: 100px; height: 100px;" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-form-label col-sm-4" asp-for="FirstName">Firstname</label>
        <div class="col-sm-8">
            <input class="form-control" asp-for="FirstName" />
            <span class="text-danger" asp-validation-for="FirstName"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-form-label col-sm-4" asp-for="LastName">Lastname</label>
        <div class="col-sm-8">
            <input class="form-control" asp-for="LastName" />
            <span class="text-danger" asp-validation-for="LastName"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-form-label col-sm-4" asp-for="UserName">Username</label>
        <div class="col-sm-8">
            <input class="form-control" readonly asp-for="UserName" />
            <span class="text-danger" asp-validation-for="UserName"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-form-label col-sm-4" asp-for="Email">E-Mail</label>
        <div class="col-sm-8">
            <input class="form-control" asp-for="Email" />
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-form-label col-sm-4" asp-for="ProfilPicture">New Profile Picture</label>
        <div class="col-sm-8">
            <input type="file" class="form-control-file" name="pic" asp-for="ProfilPicture" />
            <span class="text-danger" asp-validation-for="ProfilPicture"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-sm-4 col-sm-8">
            <button type="submit" class="btn btn-outline-primary btn-sm">Update</button>
        </div>
    </div>
</form>