@model AppUserPasswordChangeDto

<h3 class="display-4 text-center">Change Password</h3>
<form class="p-3 w-50 shadow mx-auto" method="post">
    <div class="form-group row">
        <label class="col-form-label col-sm-4" asp-for="Email">Email</label>
        <div class="col-sm-8">
            <input class="form-control" asp-for="Email" />
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-form-label col-sm-4" asp-for="CurrentPassword">Current Password</label>
        <div class="col-sm-8">
            <input type="password" class="form-control" asp-for="CurrentPassword" />
            <span class="text-danger" asp-validation-for="CurrentPassword"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-form-label col-sm-4" asp-for="NewPassword">New Password</label>
        <div class="col-sm-8">
            <input type="password" class="form-control" asp-for="NewPassword" />
            <span class="text-danger" asp-validation-for="NewPassword"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-sm-4 col-sm-8">
            <button type="submit" class="btn btn-sm btn-primary float-right ml-3">Submit</button>
            <a asp-area="Admin" asp-controller="Profile" asp-action="Index" class="btn btn-sm btn-warning float-right">Cancel</a>
        </div>
    </div>
</form>